<div class="tplinksettings">
    <h4>TP-Link Smartplug Settings</h4>
	<table class="table table-striped table-hover table-condensed table-hover" data-bind='visible: settings.settings.plugins.tplinksmartplug.arrSmartplugs().length > 0'>
		<thead>
			<tr>
				<th>IP/Hostname</th>
				<th>Warn</th>
				<th>Process GCODE</th>
				<th>Auto Connect</th>
				<th>Auto Disconnect</th>
				<th>Connect On Cmd</th>
				<th>Connect Off Cmd</th>
				<th />
			</tr>
		</thead>
		<tbody data-bind='foreach: settings.settings.plugins.tplinksmartplug.arrSmartplugs'>
			<tr data-bind='attr: {title: ip}'>
				<td><input data-bind='value: ip, uniqueName: true' /></td>
				<td><input type="checkbox" data-bind="checked: displayWarning, uniqueName: true"/></td>
				<td><input type="checkbox" data-bind="checked: gcodeEnabled, uniqueName: true"/></td>
				<td nowrap><input type="checkbox" data-bind="checked: autoConnect, uniqueName: true"/><input data-bind="value: autoConnectDelay, uniqueName: true, visible: autoConnect" size="3" /></td>
				<td nowrap><input type="checkbox" data-bind="checked: autoDisconnect, uniqueName: true"/><input data-bind="value: autoDisconnectDelay, uniqueName: true, visible: autoDisconnect" size="3" /></td>
				<td><input data-bind="value: sysCmdOn, uniqueName: true" /></td>
				<td><input data-bind="value: sysCmdOff, uniqueName: true" /></td>
				<td><a href="#" class="icon-trash" data-bind="click: $root.removePlug, css: {disabled: $root.settings.settings.plugins.tplinksmartplug.arrSmartplugs().length > 1}"></a></td>
			</tr>
			<tr data-bind='visible: sysCmdOn().length > 0'>
				<td colspan="4">System Command On Delay</td>
				<td colspan="4"><input data-bind="value: sysCmdOnDelay, uniqueName: true" size="3" /></td>
			</tr>
			<tr data-bind='visible: sysCmdOff().length > 0'>
				<td colspan="4">System Command Off Delay</td>
				<td colspan="4"><input data-bind="value: sysCmdOffDelay, uniqueName: true" size="3" /></td>
			</tr>
		</tbody>
	</table>
	<button data-bind='click: addPlug'>Add Plug</button>
</div>